<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %> 

<body>

<%- include('./partials/header') %> 

<main class="admin">
    <h1>Editar Producto</h1>
    <form action="/admin/productEdit/?_method=PUT" method="POST">
        <div class="box-form">
            <div class="input-box-form">
                <label for="nombre" >Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>">
                <span class="error"> <%= locals.errores && errores.nombre ? errores.nombre.msg : null %> </span>
            </div>
            <div class="input-box-form">
                <label for="precio">Precio:</label>
                <input type="number" id="precio" name="precio" value= <%= locals.old && old.precio ? old.precio : null%> >
                <span class="error"> <%= locals.errores && errores.precio ? errores.precio.msg : null %></span>
            </div>
            <div class="input-box-form">
                <label for="descuento">Descuento:</label>
                <input type="number" id="descuento" name="descuento" value=<%= locals.old && old.descuento ? old.descuento : null %> >
                <span class="error"><%= locals.errores && errores.descuento ? errores.descuento.msg : null %> </span>
            </div>
            <div class="input-box-form">
                <label for="categoria" >Categoría:</label>
                <select name="categoria" id="categoria" >
                    <option value="" hidden selected>Elegí</option>
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria %>" ><%= categoria %> </option>
                    <% }) %>
                    <span class="error"><%= locals.errores && errores.categoria ? errores.categoria.msg : null %> </span>
                </select>
            </div>
            <div class="input-box-form">
                <label for="imagen">Imagen</label>
                <input type="file" name="imagen" id="imagen" accept="image/*">
            </div>
            <div class="description-box">
                <label for="descripcion">Descripción:</label>
                <textarea name="descripcion" id="descripcion"> <%= locals.old && old.descripcion ? old.descripcion : null %> </textarea>
               <span class="error"> <%= locals.errores && errores.descripcion ? errores.descripcion.msg : null %> </span>
            </div>
            <div class="checkbox">
                <input type="checkbox" id="celiaquia" name="celiaquia">
                <label for="celiaquia">Celiaquía</label>
                <input type="checkbox" id="diabetes" name="diabetes">
                <label for="diabetes">Diabetes</label>
            </div>
            <div class="guardar">
                <button type="submit">Guardar</button>
            </div>
        </div>
    </form>
</main>
    
</body>
</html>
    
</body>
</html>