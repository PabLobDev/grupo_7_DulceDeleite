<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %> 


<main class="container-fluid">
    <section class="table table-responsive">
     <table class="table-hover table-responsive table-bordered" width='100%'>
         <thead>
           <tr>
             <th scope="col">#</th>
             <th scope="col">Avatar</th>
             <th scope="col">Nombre</th>
             <th scope="col">Apellido</th>
             <th scope="col">Edad</th>
             <th scope="col">Ciudad</th>
             <th scope="col">Email</th>
             <th scope="col">Rol</th>

           </tr>
         </thead>
         <tbody>
             
             <% users.forEach((user,index) => { %>
                 
                 <tr>
                     <th scope="row"><%= index + 1 %> </th>
                     <th><img width="100" height="65" src="/images/users/<%= user.avatar %>" alt=""></th>
                     <td><%= user.name %></td>
                     <td><%= user.surname %></td>
                     <td><%= user.age %></td>
                     <td><%= user.city %></td>
                     <td><%= user.email %></td>
                     <td><%= user.rol.name %></td>
                    
                      
                     <td class="d-flex justify-content-around">
                         <div>
                            <a href="/admin/userEdit/<%= user.id %>" class="btn btn-sm btn-primary" style="width: 35px;"><i class="fas fa-eye"></i></a>
                         </div>
                         <div>
                             <form id="eliminar-usuario" action="/admin/userDelete/<%= user.id %>?_method=DELETE" method="POST">
                                 <button class="btn btn-sm btn-danger" style="width: 35px;" type="submit"><i class="fas fa-trash-alt"></i></button>
                             </form>
                         </div>
                     </td>
                 </tr>
             <% }) %>
          
         
         </tbody>
       </table>
    </section>
 </main>
 <%- include('./partials/scripts') %> 
 <script src="/javascripts/profileUpdate.js"></script>
</body>

</html>