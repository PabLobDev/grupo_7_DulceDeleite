<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %> 


<main class="container-fluid">
    <section class="table table-responsive">
     <table class="table-hover table-responsive table-bordered" width='100%'>
         <thead>
           <tr>
             <th scope="col">#</th>
             <th scope="col">Imagen</th>
             <th scope="col">Nombre</th>
             <th scope="col">Precio</th>
             <th scope="col">Descuento</th>
             <th scope="col">Categoria</th>
             <th scope="col">Celiaqu√≠a</th>
             <th scope="col">Diabetes</th>
             <th scope="col">Acciones</th>

           </tr>
         </thead>
         <tbody>
             
             <% products.forEach((product,index) => { %>
                 
                 <tr>
                     <th scope="row"><%= index + 1 %> </th>
                     <th><img width="100" height="65" src="/images/productos/<%= product.image %>" alt=""></th>
                     <td><%= product.name %></td>
                     <td>$<%= product.price %></td>
                     <td><%= product.discount %>%</td>
                     <td><%= product.category.name %></td>
                     <td>
                        <div class="form-check form-switch"> 
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" <%= product.celiac === 1 ? 'checked' : null %> disabled>
                      </div>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" <%= product.diabetic === 1 ? 'checked' : null %> disabled>
                      </div>
                    </td>
                     <td class="d-flex justify-content-around">
                         <div>
                            <a href="/products/detail/<%= product.id %>" class="btn btn-sm btn-primary" style="width: 35px;"><i class="fas fa-eye"></i></a>
                         </div>
                         <div>
                             <a class="btn btn-sm btn-success" href="/admin/edit/<%= product.id %> " style="width: 35px;"><i class="fas fa-edit"></i></a>
                         </div>
                         <div>
                             <form action="/admin/remove/<%= product.id %>?_method=DELETE" method="POST">
                                 <button class="btn btn-sm btn-danger" style="width: 35px;" type="submit"><i class="fas fa-trash-alt"></i></button>
                             </form>
                         </div>
                     </td>
                 </tr>
             <% }) %>
          
         
         </tbody>
       </table>
    </section>
 </main>
 <%- include('./partials/scripts') %> 

</body>

</html>