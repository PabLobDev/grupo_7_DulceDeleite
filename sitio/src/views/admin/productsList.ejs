                  <input type="hidden" name="_method" value="DELETE"> 
                  <input type="hidden" name="_token" value="the_token">
                  <button type="submit" class="btn btn-link" onclick="if (!confirm('Â¿Seguro quieres borrar este producto?')) { return false }">Eliminar</button>
