<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %> 
<body class="login">

    <%- include('../partials/header') %>
    
    <main class="login">
        <h1>Ingresa</h1>

      <form action="" method="POST" id='form-userLogin'>
      
         <div class="box-form-login">
             
            <div class="input-box-form-login">
                <i class="fas fa-user"></i>
                <input class="form-control" type="email" name="email" id="email" placeholder="Email" value="<%= locals.old && old.email ? old.email : null  %>">
                <span class="errors" id="email-error"> <%= locals.errors && errors.email ? errors.email.msg : null %></span>
            </div>
            <div class="input-box-form-login">
                <i class="fas fa-lock"></i>
                <input class="form-control" type="password" name="pass" id="pass" placeholder="ContraseÃ±a">
                <button type="button" id="watch" type="button" class="watch"><i class="fas fa-eye"></i></button>
                <span class="errors" id="pass-error"> <%= locals.errors && errors.pass ? errors.pass.msg : null %></span>
            
            </div>
            
                <div class="checkbox">
                     <input type="checkbox" id="recordar" name="recordar">
                    <label for="recordar">Recordarme</label>
                </div>              
            <div class="send">
                <button type="submit">Enviar</button>
            </div>
            <p class="text-danger text-center small" id='error-empty'></p>
        </div>
      
        </form>
    </main>
    <%- include('../partials/footer') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>  
    <script src="/javascripts/userLogin.js"></script> 
</body>
</html>