<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head',{title : product.name}) %>

    <body>
        <%- include('../partials/header') %>

            <main class="detail">
                <section>
                    <h2>
                        <%= product.name %>
                    </h2>
                    <div class="detalle">

                        <div>
                            <img src="/images/productos/<%= product.image %>">
                        </div>
                        <div class="detalle-contenido">
                            <p class="description">
                                <%= product.description %>
                            </p>
                            <div class="precio">
                                <% if (product.discount> 0) { %>
                                    <p>
                                        <span>$<%= toThousand(product.price) %> </span>
                                        
                                        <b>
                                            <%= product.discount %>% OFF
                                        </b>
                                    </p>
                                    <p>
                                        $<%= precioFinal(product.price,product.discount) %>
                                    </p>
                                    <% }else{ %>
                                        <p>
                                            $<%= precioFinal(product.price,product.discount) %>
                                        </p>
                                        <% } %>
                                    </div>
                                 <div class="box-button">
                                <button type="submit">COMPRAR AHORA</button>
                            </div>
                        </div>
                </section>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>