<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main class="main-products-views">
      <section class="products-destac">
        <h2>Saludables</h2>
        
        <% products.forEach(product => { %>

          <% if (product.celiac === 1 || product.diabetic === 1){ %>
             
            <article>
              <% if(product.celiac === 1){ %>
                <img class="tacc" src="/images/sin-tacc.png">
              <% } %> 
              <% if(product.diabetic === 1){ %>
                <img class="lapdi" src="/images/lapdi.png">
              <% } %>
              <% if (locals.userLogin) { %>
                <% if (userLogin.rolId === 1) { %>
                  <div class="card-cart hint--right" aria-label="Agregar al carrito">
                 <a href="#" onclick="addItem(event,'<%=product.id%>')"><img src="https://img.icons8.com/fluency/48/000000/shopping-cart.png"/></a> 
                </div>   
                  <% } %> 
                <% } %>
                <div class="product-caja-img">
                  <img src="/images/productos/<%=product.image%>" height="349px" alt="" />
                </div>
                <div class="product-info">
                  <h4><%= product.name %></h4>
                  <a href="/products/detail/<%= product.id %>">Ver detalles</a>
                  <span>$<%= product.price %></span>
                </div>
              </article>
           <% } %>
         <% }) %>
      
         
      </section>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
  </body>
</html>
